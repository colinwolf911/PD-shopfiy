{% assign image_size = 'original' %}
{% assign image_thumb_size = 'original' %}
{% assign image_scale = 3 %}
{% assign truncate_words = 30 %}
{% assign current_variant = product.selected_or_first_available_variant %}


<div class="searchly-quickview-wrapper">
  <div title="Close" class="searchly-quickview-close">Ã—</div>
  <div class="searchly-quickview-content">
    <div class="searchly-quickview-left searchly-quickview-product-thumbs">

      {% if product.images.size > 0 %}
      <div class="searchly-quickview-slider">
          <div class="searchly-quickview-slider-inner">
            <div class="searchly-quickview-featured-image-wrapper">
        {% for image in product.images %}<div class="searchly-quickview-featured-image">
          <img src="{{ image.src | img_url: image_size }}" alt="{{ image.alt | escape }}" />
                </div>
        {% endfor %}</div>
      </div>
      {% if product.compare_at_price > product.price %}
        <div class="searchly-quickview-sale-lable">Sale</div>
        {% endif %}<div class="searchly-quickview-slider-nav">
            <div class="searchly-quickview-slider-prev"></div>
            <div class="searchly-quickview-slider-next"></div>
          </div>
          <div class="searchly-quickview-slider-dots">
            {% for image in product.images %}
              <div class="searchly-quickview-slider-dot" data-image="{{ image.src | product_img_url }}" data-index="{{forloop.index0}}"></div>
            {% endfor %}
          </div>
        </div>
      {% endif %}

    </div>

    <div class="searchly-quickview-right product-details">
      <div class="searchly-quickview-right-inner">
        <h2 class="searchly-quickview-title">{{ product.title }}</h2>

        {% if active_vendor %}
        <p class="searchly-quickview-vendor">{{ product.vendor }}</p>
        {% endif %}

        {% if active_description %}
        <div class="searchly-quickview-description">
          {{ product.description | strip_html | truncatewords: truncate_words }}
        </div>
        {% endif %}



        {% if active_price %}
        <div class="searchly-quickview-price-wrapper {% unless current_variant.available %} searchly-quickview-price-sold-out{% endunless %} {% if current_variant.compare_at_price > current_variant.price %} searchly-quickview-price-on-sale{% endif %}">
            <p class="searchly-quickview-price">
              {% if current_variant.compare_at_price > current_variant.price %}
                <span id="searchly-quickview-current-price" class="searchly-quickview-price">
                  {{ current_variant.price | money }}
                </span>
                <span id="searchly-quickview-was-price" class="searchly-quickview-price searchly-quickview-was-price">
                  {{ current_variant.compare_at_price | money }}
                </span>
              {% else %}
                <span id="searchly-quickview-current-price" class="searchly-quickview-price">
                  {{ current_variant.price | money }}
                </span>
                <span id="searchly-quickview-was-price" class="searchly-quickview-price searchly-quickview-was-price"></span>
              {% endif %}
            </p>
        </div>
        {% endif %}

        {% if active_cart_form %}
        <form id="searchly-quickview-cart-form" action="/cart/add" method="post" enctype="multipart/form-data" class="searchly-quickview-cart-form product-form">
          <div id="searchly-quickview-variants-data" style="display:none">
            [
            {% for variant in product.variants %}
              {
                "id": {{ variant.id | json }},
                "option1": {{ variant.option1 | json }},
                "option2": {{ variant.option2 | json }},
                "option3": {{ variant.option3 | json }},
                "available": {{ variant.available | json }}
              }{%- if forloop.last != true -%},{%- endif -%}
            {% endfor %}
            ]
          </div>

          <select style="display:none" name="id" id="searchly-quickview-variants-selector" class="searchly-quickview-variants-selector">
            {% for variant in product.variants %}
              {% if variant.image != blank %}
                {% assign variant_image = variant.image %}
              {% else %}
                {% assign variant_image = featured_image %}
              {% endif %}
              <option value="{{ variant.id }}"
                  data-magnify-src="{{ variant_image | img_url: image_size, scale: image_scale }}"
                  data-featured-image="{{ variant_image | img_url: image_size }}"
                  data-variant-id="{{ variant.id }}" data-options="{{ variant.title }}"
                  data-current-price-without-currency="{{ variant.price | money_without_currency }}"
                  data-current-price="{{ variant.price | money | strip_html }}"
                  data-was-price-without-currency="{{ variant.compare_at_price | money_without_currency }}"
                  data-was-price="{% if variant.compare_at_price > 0 %} {{ variant.compare_at_price | money | strip_html }} {% endif %}"
                  {% if variant.available %} data-available="true" {% else %} data-available="false" disabled="disabled" {% endif %}
                  {% if variant == product.selected_or_first_available_variant %} selected="selected" {% endif %}>
              </option>
            {% endfor %}
          </select>

          {% assign variantCount = product.variants | size %}
          {% if variantCount > 0 and product.variants[0].title != 'Default Title'  %}
            {%- for option in product.options_with_values -%}
                {% assign is_color = false %}
                {% assign option_name = option.name | downcase %}
                {% assign file_extension = 'png' %}
                {% assign option_id = 'option' | append: forloop.index %}
                {% if option_name contains 'color' or option_name contains 'colour' %}
                  {% assign is_color = true %}
                {% endif %}
              <div class="searchly-quickview-selector-wrapper {% if index == option_size %}last{% endif %}" id="ProductSelect-option-{{ forloop.index0 }}" name="{{ option.name | handleize }}">
                <div class="searchly-quickview-product-option-header">
                  {{ option.name | escape }}
                </div>
                {%- for value in option.values -%}
                  <!-- Check to see if there's a product size option. If there is a size, check to see if there's any availble for purchase. If not, set the variat control in a "disabled" state. -->
                  {%- assign variant_label_state = true -%}

                  {%- if product.options.size == 1 -%}
                    {%- unless product.variants[forloop.index0].available -%}
                      {%- assign variant_label_state = false -%}
                    {%- endunless -%}
                  {%- endif -%}
                  <div data-value="{{ value | escape }}" class="searchly-swatch-element {% if is_color %} searchly-quickview-option-color {% endif %} {{ value | handle }} {% if variant.available %}available{% else %}searchly-soldout{% endif %}">
                    {% if is_color %}
                    <div class="searchly-quickview-tooltip">{{ value }}</div>
                    {% endif %}
                    <input type="radio"
                      {% if option.selected_value == value %} checked="checked"{% endif %}
                      {% unless variant_label_state %} disabled="disabled"{% endunless %}
                      value="{{ value | escape }}"
                      data-name="{{ option.name | handleize }}"
                      name="{{ option_id }}"
                      id="ProductSelect-option-{{ option.name | handleize }}-{{ value | escape }}"
                      class="searchly-quickview-select-option">
                    {% if is_color %}
                    <label class="abc" for="ProductSelect-option-{{ option.name | handleize }}-{{ value | escape }}" style="background-color: {{ value | split: ' ' | last | handle }}; background-image: url({{ value| prepend: 'color-' | handle | append: '.' | append: file_extension | file_url }})">
                    </label>
                    {%- else -%}
                    <label for="ProductSelect-option-{{ option.name | handleize }}-{{ value | escape }}">
                      {{ value | escape }}
                    </label>
                    {%- endif -%}
                  </div>
                {%- endfor -%}
              </div>
            {%- endfor -%}
          {%- endif -%}

          <div class="searchly-quickview-qty-cartbtn-wrapper">
            <label for="searchly-quickview-cart-quantity">{{ quantity_label }}</label>
            <div class="searchly-quickview-qty-cartbtn">
              <div class="searchly-quickview-quantity">
                <input type="number" id="searchly-quickview-cart-quantity" name="quantity" value="1" min="1" class="searchly-quickview-cart-quantity" pattern="[0-9]*" required>
              </div>
              <div class="searchly-quickview-cart">
                <button type="submit" name="add" id="searchly-quickview-cart-btn" {% unless current_variant.available %}disabled="disabled"{% endunless %} class="searchly-quickview-cart-btn{% if product.options.size == 1 and product.variants[0].title == 'Default Title' %} product-form__cart-submit--small{% endif %}">
                  <span id="searchly-quickview-cart-btn-text">
                    {% unless current_variant.available %}
                      {{ sold_out_btn_label }}
                    {% else %}
                      {{ add_to_cart_btn_label }}
                    {% endunless %}
                  </span>
                </button>
              </div>
            </div>
          </div>
        </form>
        {% endif %}
        <div class="searchly-quickview-view-full-wrapper"><a href="{{ product.url | within_collection }}" class="searchly-quickview-view-full">{{ view_full_label }}</a></div>
      </div>
    </div>
  </div>
</div>
